<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
    <plugins>
			<plugin>
			    <groupId>org.apache.cxf</groupId>
			    <artifactId>cxf-codegen-plugin</artifactId>
			    <version>${cxf.version}</version>
			    <executions>
			      <execution>
			        <id>generate-sources</id>
			        <phase>generate-sources</phase>
			        <goals>
			          <goal>wsdl2java</goal>
			        </goals>
			        <configuration>
			          <sourceRoot>${project.build.directory}/generated-sources/ws-clients</sourceRoot>
			          <wsdlOptions>
			            <!-- Web Service clients -->
			          </wsdlOptions>
			        </configuration>
			      </execution>
			    </executions>
			  </plugin> 
    </plugins>
</configuration>